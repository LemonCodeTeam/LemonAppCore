				<TextBlock x:Name="tTime_Now" Text="00:00" Foreground="White"/>
				<TextBlock Text=" / " Foreground="White"/>
				<TextBlock x:Name="tTime_All" Text="00:00" Foreground="White"/>
			</WrapPanel>
		</Grid>
	</Grid>
</Window>
